extends ../../layouts/default.pug

block main
    .block-main
        h3(class="mb-4") Thêm mới người dùng
        .form-create-user
            form(
                action=`${prefixadmin}/accounts/create`
                method='POST'
            ) 
                div(class="form-group")
                    label(for="fullName") Họ tên 
                        span.required ✳
                    input(
                        type="text"
                        class="form-control"
                        id="fullName"
                        name="fullName"
                        required     
                    ) 
                div(class="form-group")
                    label(for="email") Email 
                        span.required ✳
                    input(
                        type="text"
                        class="form-control"
                        id="email"
                        name="email"
                        required     
                    ) 
                div(class="form-group")
                    label(for="password") Mật khẩu
                        span.required ✳
                    input(
                        type="text"
                        class="form-control"
                        id="password"
                        name="password"
                        required     
                    ) 
                div(class="form-group")
                    label(for="phone") Số điện thoại
                        span.required ✳
                    input(
                        type="text"
                        class="form-control"
                        id="phone"
                        name="phone"
                        required     
                    ) 
                div(class="form-group")
                    label(for="address") Địa chỉ
                        span.required ✳
                    input(
                        type="text"
                        class="form-control"
                        id="address"
                        name="address"
                        required     
                    ) 
                div(class="form-group")
                    label(for="dateOfBirth") Ngày sinh
                        span.required ✳
                    input(
                        type="text"
                        class="form-control"
                        id="dateOfBirth"
                        name="dateOfBirth"
                        placeholder="dd/mm/yyyy "
                        required     
                    ) 
                div(class="form-group")
                    label(for="Role_id") Chức vụ
                    span.required  ✳
                        select(name="Role_id" id="Role_id" class="form-control")
                            option(disabled selected) -- Chọn chức vụ -- 
                            each item in roles  
                                option(value=item.id) #{item.title}
                div(class="form-group")
                    label(for="sex") Giới tính
                        span.required ✳
                div(class="form-group form-check form-check-inline")
                    input(
                        type="radio"
                        class="form-check-input"
                        id="sexInMale"
                        name="sex"
                        value="male"
                        checked
                    ) 
                    label(for="sexInMale" class="form-check-label") Nam
                div(class="form-group form-check form-check-inline")
                    input(
                        type="radio"
                        class="form-check-input"
                        id="sexInFemale"
                        name="sex"
                        value="female"
                    ) 
                    label(for="sexInFemale" class="form-check-label") Nữ
                
                div(class="form-group")
                    label(for="status") Trạng thái
                        span.required ✳
                div(class="form-group form-check form-check-inline")
                    input(
                        type="radio"
                        class="form-check-input"
                        id="statusActive"
                        name="status"
                        value="active"
                        checked
                    ) 
                    label(for="statusActive" class="form-check-label") Hoạt động
                div(class="form-group form-check form-check-inline")
                    input(
                        type="radio"
                        class="form-check-input"
                        id="statusInActive"
                        name="status"
                        value="inactive"
                    ) 
                    label(for="statusInActive" class="form-check-label") Dừng hoạt động
                div(class="form-group")
                    button(
                        type="submit"
                        class="btn btn-primary"
                    ) Tạo mới